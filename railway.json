{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "python -m venv venv && source venv/bin/activate && pip install -r requirements.txt && chmod +x start.sh"
    },
    "deploy": {
        "numReplicas": 1,
        "sleepApplication": false,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3,
        "startCommand": "./start.sh"
    },
    "environments": {
        "production": {
            "variables": {
                "PYTHON_VERSION": "3.11",
                "FLASK_ENV": "production",
                "FLASK_APP": "app.py",
                "NIXPACKS_PYTHON_VERSION": "3.11"
            }
        }
    },
    "services": [
        {
            "name": "medconnect-web",
            "source": {
                "type": "image",
                "image": "python:3.11-slim"
            },
            "build": {
                "command": "pip install -r requirements.txt"
            },
            "start": {
                "command": "gunicorn app:app --bind 0.0.0.0:$PORT --workers 2 --timeout 120"
            },
            "variables": {
                "PORT": "${{RAILWAY_PORT}}",
                "FLASK_ENV": "production"
            }
        },
        {
            "name": "medconnect-bot",
            "source": {
                "type": "image",
                "image": "python:3.11-slim"
            },
            "build": {
                "command": "pip install -r requirements.txt"
            },
            "start": {
                "command": "python run_bot.py"
            },
            "variables": {
                "FLASK_ENV": "production"
            }
        }
    ]
}